pipeline {
    agent any

    stages {
        stage('Building'){
            steps{
                bat 'python -m pip install -r requirements.txt'
            }
        }
        stage('Testing'){
            steps{
                bat 'python -m unittest'
            }
        }
        stage('Deploying'){
            steps{
                bat 'docker build -t ml_mnist .'
                bat 'docker run -d ml_mnist'
            }
        }
    }
}
